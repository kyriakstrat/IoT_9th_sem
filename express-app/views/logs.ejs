<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="logs.css">

  <title>Logs</title>
</head>
<body>
<%- include('navbar', { username}) %>   

  <header>
    <h1>Logs</h1>
  </header>
  <main>
    <% if (logs.length > 0) { %>
      <ul class="log-list">
        <% logs.reverse().forEach(log => { %>
          <li>
            <strong>Device Name:</strong> <%= log.deviceName %><br>
            <strong>Value:</strong> <%= log.value %><br>
            <strong>Timestamp:</strong> <%= log.timestamp %>
          </li>
        <% }); %>
      </ul>
      <form action="/logs/delete" method="post" id="deleteLogsForm">
        <button type="submit">Delete All Logs</button>
      </form>
    <% } else { %>
      <p>No logs found.</p>
    <% } %>
  </main>
</body>
</html>
